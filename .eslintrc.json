{
  "env": {
    "commonjs": true,
    "es6": true,
    "node": true,
    "jest": true
  },
  "rules": {
    "generator-star-spacing": 0,
    "no-console": 1,
    "prefer-rest-params": 1,
    "arrow-body-style": 0,
    "no-unused-vars": "warn",
    "comma-dangle": 0,
    "no-unexpected-multiline": "warn",
    "valid-jsdoc": 2,
    "max-len": [ "error", 140 ],
    "require-jsdoc": [
      "warn",
      {
        "require": {
          "FunctionDeclaration": true,
          "MethodDefinition": false,
          "ClassDeclaration": false,
          "ArrowFunctionExpression": false,
          "FunctionExpression": false
        }
      }
    ]
  }
}